generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}



datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Users {
  Id_User   Int    @id @default(autoincrement())
  Name      String
  Email     String
  Id_Department String
  Password  String
}

model Employees {
  Id_Employee   Int    @id @default(autoincrement())
  Name          String
  First_SurName      String
  Second_Surname        String
  Email     String
  Phone_Number String
  Address     String
  Id_State   Int
  Id_City    Int
  Id_Job     Int
  Id_Department    Int
  Id_Employee_type      Int 
  Start_Date   DateTime
  Salary   String
  Status   String
  Curp      String
  RFC       String
  Id_PayFrequency Int
  BankAccountNumber String
}


model Departments {
  Id_Department   Int    @id @default(autoincrement())
  Description      String
}

model Jobs {
  Id_Job   Int    @id @default(autoincrement())
  Description      String
}

model Employee_Type {
  Id_Employee_type   Int    @id @default(autoincrement())
  Description      String
}

model Pay_Frequency {
  Id_PayFrequency   Int    @id @default(autoincrement())
  Description      String
}

model Deducciones {
  Id_Concept   Int    @id @default(autoincrement())
  Value String
  Description      String
}

model State{
  Id_State   Int    @id @default(autoincrement())
  State      String
}

model City{
  Id_City   Int    @id @default(autoincrement())
  City      String
}


model Employees_Movements{
  Id_Movement   Int    @id @default(autoincrement())
    Id_Employee  Int  
    Id_Concept Int     
    Movement_Type String    
    Total_Amount String
    Deduction String
    Initial_Period DateTime
	  Last_Time_Update DateTime
	  Increase_or_Rest String
    Is_Processed Boolean @default(false)
}