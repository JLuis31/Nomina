generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}



datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Users {
  Id_User   Int    @id @default(autoincrement())
  Name      String
  Email     String
  Password  String
}

model Employees {
  Id_Employee   Int    @id @default(autoincrement())
  Name          String
  First_SurName      String
  Second_Surname        String
  Email     String
  Phone_Number String
  Address     String
  Id_State   Int
  Id_City    Int
  Id_Job     Int
  Id_Department    Int
  Id_Employee_type      Int 
  Start_Date   DateTime
  Salary   Float
  Status   String
  Curp      String
  RFC       String
  Id_PayFrequency Int
  BankAccountNumber String
}


model Departments {
  Id_Department   Int    @id @default(autoincrement())
  Description      String
}

model Jobs {
  Id_Job   Int    @id @default(autoincrement())
  Description      String
}

model Employee_Type {
  Id_Employee_type   Int    @id @default(autoincrement())
  Description      String
}

model Pay_Frequency {
  Id_PayFrequency   Int    @id @default(autoincrement())
  Description      String
}

model Concepts{
  Id_Concept_Type String
  Id_Concept String @id
  Description String
  Income_Tax Boolean @default(false)
  Social_Sec Boolean @default(false)
  Is_Default_Concept Boolean @default(false)
}

model State{
  Id_State   Int    @id @default(autoincrement())
  State      String
}

model City{
  Id_City   Int    @id @default(autoincrement())
  City      String
}

model Employees_Movements{
  Id_Movement   Int    @id @default(autoincrement())
    Id_Employee  Int  
    Id_Concept String   
    Id_PayFrequency Int 
	  Id_Period Int  
    Id_Concept_Type String    
    Total_Amount Float
    Balance Float
	  Last_Time_Update DateTime
	  Increase_or_Rest String
    Created_By String
    Is_Processed Boolean @default(false)
}

model  Payroll {
  Year            Int
  Id_PayFrequency Int
  Id_Period      Int
  Period_Start    DateTime
  Period_End      DateTime
  Month           Int
  Status          String   @default("Open")
  Process_Date    DateTime @default(now())

    @@id([Year, Id_PayFrequency, Id_Period])

}

model Default_Concepts{
  Id_Default_Concept  Int    @id @default(autoincrement())
  Id_PayFrequency Int
	Id_Concept String
	Id_Concept_Type String
  Per_Hour Float
  Per_Amount Float
  Description String


}


model Employee_Exceptions{
  Id_Movement   Int    @id @default(autoincrement())
  Id_Employee  Int  
  Id_Concept String
  Id_PayFrequency Int  
  Id_Concept_Type String    
  Per_Hour Float
  Per_Amount Float
}

model UMA_Values{
  Id_UMA   Int    @id @default(autoincrement())
  UMA_Year   String     
  UMA_Values  Float
  Is_Active Boolean @default(false)
}

model Payment_Records{
  Id_Employee Int
  Id_PayFrequency Int
  Id_Period Int
  GrossSalary Float
  Incomes_Sumatory Float
  Deductions_Sumatory Float
  Federal_Tax_Withheld Float
  Social_Security_Withholding Float
  Total_Tax_Deductions Float
  Net_Pay Float
  Date DateTime

    @@id([Id_Employee, Id_PayFrequency, Id_Period])

}

model Payroll_Detail{
  Id_PayrollDetail Int
  Id_Period Int
  Id_PayFrequency Int
  Id_Employee Int
  Id_Department Int
  Id_Concept String
  Id_Concept_Type String
  Worked_Hours Float
  Salary_Per_Hour Float
  Balance Float
  Amount Float

    @@id([Id_PayrollDetail])
}
